ServerName localhost
<VirtualHost *:80>
  ServerAdmin webmaster@localhost

  DocumentRoot /var/www/assets
  Alias /assets /var/www/assets

  <Directory />
    Options FollowSymLinks
    AllowOverride None
    Order deny,allow
    Deny from all
  </Directory>
  <Directory /var/www/assets/>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  ErrorLog /var/log/apache2/assets.log
  LogLevel warn
  CustomLog /var/log/apache2/assets.custom.log combined
</VirtualHost>
